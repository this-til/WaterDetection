<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.til.water_detection.sql.mapper.DataTypeMapper">


    <insert id="addDataType">
        insert into water_detection_data.data_type (id, user_id, another_name)
        values(#{id}, #{userId}, #{anotherName})
    </insert>

    <delete id="removeDataTypeById">
        delete
        from water_detection_data.data_type
        where id = #{id}
    </delete>

    <update id="updateDataTypeAnotherNameById" >
        update water_detection_data.data_type
        set another_name = #{anotherName}
        where id = #{id}
    </update>

    <select id="getDataTypeById" resultType="com.til.water_detection.data.DataType">
        select *
        from water_detection_data.data_type
        where id = #{id}
    </select>

    <select id="getDataTypeListByUserId" resultType="com.til.water_detection.data.DataType">
        select *
        from water_detection_data.data_type
        where user_id = #{userId}
    </select>

</mapper>